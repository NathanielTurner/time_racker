<h2>List of All Programmers</h2>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Registered At</th>
    </tr>
  </thead>

  <tbody>
    <% @programmers.each do |programmer| %>
      <tr>
        <td id="first"><%= programmer.first_name %></td>
        <td id="last"><%= programmer.last_name %></td>
        <td id="join_date"><%= programmer.created_at.strftime("%m/%d/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
